<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="project_issue_form_view" model="ir.ui.view">
            <field name="model">project.issue</field>
            <field name="inherit_id" ref="project_issue.project_issue_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='version_id']" position="before">
                    <field name="date_limit"/>
                </xpath>
            </field>
        </record>
        <record id="view_project_issue_sale_tree" model="ir.ui.view">
            <field name="model">project.issue</field>
            <field name="inherit_id" ref="project_issue.project_issue_tree_view"/>
            <field name="arch" type="xml">
                <field name="name" position="before">
                    <field name="date_limit"/>
                </field>
            </field>
        </record>
        <record id="project_issue_kanban_view" model="ir.ui.view">
            <field name="model">project.issue</field>
            <field name="inherit_id" ref="project_issue.project_issue_kanban_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <br/><field name="date_limit"/>
                </xpath>
            </field>
        </record>
        <record id="project_issue_kanban_view" model="ir.ui.view">
            <field name="model">project.issue</field>
            <field name="inherit_id" ref="project_issue.project_issue_calendar_view"/>
            <field name="arch" type="xml">
                <xpath expr="//calendar" position="attributes">
                    <attribute name="date">date_limit</attribute>
                    <attribute name="date_delay"></attribute>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
