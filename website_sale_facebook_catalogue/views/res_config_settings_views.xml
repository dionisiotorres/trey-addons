<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='facebook_fields']" position="inside">
                <div class="row mt16">
                    <label class="col-md-3 o_light_label" string="Company Brand"/>
                    <field name="company_brand"/>
                </div>
                <div class="row mt16">
                    <label class="col-md-3 o_light_label" string="Product ID prefix"/>
                    <field name="id_prefix"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
