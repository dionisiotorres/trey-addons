<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="payment_tokens_list" inherit_id="payment.payment_tokens_list">
        <xpath expr="//t[@t-foreach='form_acquirers']//label" position="inside">
            <t t-if="acq.discount">
                <div class="badge">
                    -<span t-field="acq.discount"/> %
                </div>
            </t>
        </xpath>
    </template>
</odoo>
