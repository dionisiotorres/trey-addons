<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='languages_setting']" position="after">
                    <div class="col-xs-12 col-md-6 o_setting_box" id="localization_settings">
                        <div class="o_setting_right_pane">
                            <label for="website_public_users"/>
                            <div class="text-muted">
                                Public users available in website
                            </div>
                            <div class="mt16">
                                <div class="content-group o_field_many2manytags o_input o_field_widget">
                                    <field name="website_public_users" widget="many2many_tags" options="{'no_create': True, 'no_open': True}"/>
                                </div>
                            </div>
                        </div>
                    </div>
            </xpath>
        </field>
    </record>
</odoo>
